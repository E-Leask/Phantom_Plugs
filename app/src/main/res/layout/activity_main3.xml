<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="5dp"
    tools:context="c.myapplication.Main3Activity">

    <View android:id="@+id/title_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#68228b"
        android:visibility="visible"/>

    <View android:id="@+id/title_block_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#68228b"
        android:visibility="visible"
        android:layout_above="@id/timePicker2"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_alignBottom="@+id/title_block"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timePicker2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/title_block_2"
        android:gravity="center"
        android:text="Turn Off"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:amPmBackgroundColor="#000000"
        android:amPmTextColor="#000000"
        android:numbersSelectorColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />
    <TimePicker
        android:id="@+id/timePicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:amPmBackgroundColor="#000000"
        android:amPmTextColor="#000000"
        android:numbersSelectorColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/timePicker"
        android:layout_alignStart="@+id/timePicker" />
</RelativeLayout>