<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="5dp"
    tools:context="c.myapplication.Main3Activity">

    <View android:id="@+id/title_block"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:background="#68228b"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Schedule"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/toggleButton" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_block"
        android:layout_marginTop="20dp"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Monday"
        android:textOn="Use Timer on Monday"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Tuesday"
        android:textOn="Use Timer on Tuesday"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton2"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Wednesday"
        android:textOn="Use Timer on Wednesday"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton3"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Thursday"
        android:textOn="Use Timer on Thursday"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton4"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Friday"
        android:textOn="Use Timer on Friday"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton5"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Saturday"
        android:textOn="Use Timer on Saturday"
        android:textSize="20dp" />

    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleButton7"
        android:minHeight="65dp"
        android:text="ToggleButton"
        android:textOff="Ignore Timer on Sunday"
        android:textOn="Use Timer on Sunday"
        android:textSize="20dp" />

</RelativeLayout>