<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingTop="5dp"
    tools:context="c.myapplication.Main2Activity">

    <View android:id="@+id/rectangle_at_the_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#68228b"
        android:visibility="visible"/>


    <View
        android:id="@+id/rectangle_2nd_from_the_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/rectangle_at_the_top"
        android:background="#ffffff"
        android:visibility="visible" />

    <View android:id="@+id/spacer_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#474747"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rectangle_2nd_from_the_top" />
    <View android:id="@+id/spacer_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#474747"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rectangle_3rd_from_the_top" />
    <View android:id="@+id/spacer_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#474747"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rectangle_4th_from_the_top" />

    <View
        android:id="@+id/rectangle_3rd_from_the_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/spacer_1"
        android:background="#ffffff"
        android:visibility="visible" />

    <View
        android:id="@+id/rectangle_4th_from_the_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"

        android:layout_below="@+id/spacer_2"
        android:background="#ffffff"
        android:visibility="visible" />


    <TextView
        android:id="@+id/txt_Room1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorWhite"
        android:layout_alignBottom="@+id/rectangle_at_the_top"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_Edit_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Device Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_alignLeft="@+id/txt_Calender"
        android:layout_alignStart="@+id/txt_Calender"
        android:layout_below="@+id/spacer_2"
        android:layout_alignBottom="@+id/rectangle_4th_from_the_top" />

    <TextView
    android:id="@+id/txt_Timer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Set Timer"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:textColor="@color/colorBlack"
    android:gravity="center"
        android:layout_above="@+id/rectangle_3rd_from_the_top"
        android:layout_alignLeft="@+id/txt_Calender"
        android:layout_alignStart="@+id/txt_Calender"
        android:layout_below="@+id/rectangle_at_the_top" />

    <TextView
        android:id="@+id/txt_Calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Schedule"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:layout_above="@+id/rectangle_4th_from_the_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/spacer_1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rectangle_3rd_from_the_top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/rectangle_at_the_top"
        android:layout_toRightOf="@+id/txt_Room1"
        android:layout_toEndOf="@+id/txt_Room1" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle_3rd_from_the_top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_below="@+id/spacer_1"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"/>


</RelativeLayout>
